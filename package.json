{
  "name": "hotcrunch",
  "version": "0.1.0",
  "private": true,
  "main": "dist-electron/main.js",
  "homepage": "./",
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "electron": "wait-on tcp:3000 && cross-env NODE_ENV=development electron . --no-sandbox --disable-dev-shm-usage",
    "electron:pack": "electron-builder",
    "electron:dev": "concurrently \"npm run dev\" \"npm run electron\"",
    "electron:dev-clean": "concurrently \"npm run dev\" \"npm run electron:clean\"",
    "electron:clean": "wait-on tcp:3000 && cross-env NODE_ENV=production electron . --no-sandbox --disable-dev-shm-usage",
    "electron:build": "npm run build && npm run build:electron && npm run electron:pack",
    "build:electron": "tsc -p electron/tsconfig.json && tsc -p preload/tsconfig.json",
    "preelectron:pack": "npm run build && npm run build:electron"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.2.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.515.0",
    "next": "15.3.3",
    "next-themes": "^0.4.6",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^36.4.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9",
    "eslint-config-next": "15.3.3",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.3.4",
    "typescript": "^5",
    "wait-on": "^8.0.3"
  },
  "build": {
    "appId": "com.hotcrunch.app",
    "productName": "HotCrunch",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist-electron/**/*",
      "out/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
